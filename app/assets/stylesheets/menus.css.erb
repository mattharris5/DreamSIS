header {

	.navbar-inverse .navbar-nav > li > a {
		color: #e9e9e9;
		font-weight: 700;
	}

	.navbar-brand {
		padding: 10px;
		
		> img {
			height: 30px;
		}
	}

	.dropdown-menu {
		
		> li > a {
			color: rgb(89, 105, 129);
			font-size: 13px;
			font-weight: 600;
			padding: 5px 30px 5px 20px;
			
			> i, > img {
				margin-right: 0.5em;
			}
			
		}
		
		> h4 {
			@extend .navbar-text;
			font-size: 11px;
			font-weight: 600;
			padding: 5px 25px 5px 20px;
			margin: 0;
			text-transform: uppercase;
		}
		
	}
}
