/* @group iPhone */

@media screen and (max-width: 640px) {

#content, #sidebar, #header, #sidebar-header, #main-nav, #main-nav ul, #menu_expander_link, #header h1, #sidebar_#header h1, #sidebar_expander_link {
	-webkit-transition: all 0.3s ease-in-out;
}

/* @group Header */

#header {
  display: block;
  margin: 0;
  padding: 0;
}

#header h1 {
	background-size: 75%;
  position: relative;
  left: 50px;
  top: 3px;
  padding: 0;
  margin: 0;
}

#header h1 a {
	display: block;
	top: 10px;
	left: 10px;
	height: 35px;
	width: 200px;
	margin-bottom: 2px;
}

#login_logout {
	font-size: 110%;
	position: static;
	display: inline-block;
}

#login_logout img.avatar {
	float: none;
	margin-left: 1em;
	position: absolute;
	top: 14px;
	right: 35px;
	border: 1px solid rgba(255,255,255,0.4);
	border-radius: 20px;
	-webkit-transition: all 0.25s ease-in-out;
}

#login_logout ul {
  position: absolute;
  top: 50px;
  right: 30px;
  display: block;
  background: white;
  visibility: hidden;
  border-radius: 5px;  
	background: white;
	padding: 1em 2em 0.5em 2em;
  box-shadow: 0px 0px 4px rgba(0,0,0,0.3);
}

#login_logout:hover ul {
  visibility: visible;
}

#login_logout ul > li {
  display: block;
  padding: 0;
  margin: 0;
}

#login_logout ul > li, #login_logout ul > li > a {
  color: #333;
}

#login_logout ul > li:first-child {
  margin-bottom: 5px;
}

#login_logout ul > li > a {
  padding: 5px 10px;
  display: block;
  text-align: center;
}

#login_logout ul:after, #login_logout ul:before {
	bottom: 100%;
	right: 15px;
	border: solid transparent;
	content: " ";
	height: 0;
	width: 0;
	position: absolute;
	pointer-events: none;  
}

#login_logout ul:after {
/*  border-color: rgba(255, 255, 255, 0);*/
	border-bottom-color: #ffffff;
	border-width: 7px;
	margin-left: -7px;
}

#login_logout ul:before {
/*  border-color: rgba(17, 25, 245, 0);*/
  border-bottom-color: rgba(0,0,0,0.1);
	border-width: 8px;
	margin-left: -8px;
}



/* @end */

/* @group Nav Menu */

#main-nav {
  display: block;
  margin: 0;
  padding: 0;
  height: 0;
  position: relative;
  z-index: 100;
  left: 0;
  top: 0;
  display: block;
  float: none;
  clear: both;
  overflow: hidden;
}

.menu_view #main-nav {
  height: auto;
}

.menu li {
	float: none;
	position: relative;
	padding: 0;
	height: auto;
}

.menu li a {
	display: block;
}

.menu a, .menu a:visited {
	border-left: none;
	border-bottom: 1px solid #999;
	padding: 5px 10px;
  color: #777;
}

.menu ul {
	margin: 0;
	padding: 0;
}

.menu ul ul a, .menu ul ul a:visited {
	color: #666;
	padding: 7px 10px;
	padding-left: 3em;
	width: 100%;
}

.menu ul li div.double-wide {
  width: 100%;
}

.menu ul ul a:hover {
	background: none;
	color: #777;
}

.menu ul ul {
	float: none;
	display: block;
	background: none;
	-webkit-box-shadow: none;
	border: none;
	padding: 0;
	margin: 0;

}

.menu ul li div {
	visibility: visible;
	position: relative;
	top: auto;
	left: auto;
	display: block;
	float: none;
	height: 0;
	opacity: 0;
	-webkit-transition: all 0.25s ease-in-out;
	width: 100%;
}


.menu ul li:hover div,
.menu ul a:hover div {
	visibility: visible;
	height: auto;
	opacity: 1;
}

.menu ul ul li {
  width: 100%;
  display: block;
	height: auto;
	background: white;
}

.menu ul ul li a {
  background-position: 10px center;
}

#header ul.menu li {
	display: block;
	float: none;
}

#menu_expander_link {
	display: block;
	position: absolute;
  top: 20px;
  left: 10px;
	padding: 3px 6px 6px;
	border-radius: 3px;
	z-index: 2;
	background-image: linear-gradient(to bottom, #f4f4f4, #f8f8f8);
	box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.1), 0 1px 0 rgba(255, 255, 255, 0.075);
	-webkit-box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.1), 0 1px 0 rgba(255, 255, 255, 0.075);
	text-shadow: 0 1px 1px rgba(255, 255, 255, 0.75);
	-webkit-transition: all 0.5s ease-in;
}

#menu_expander_link .icon-bar {
	-webkit-box-shadow: 0 1px 0 rgba(0, 0, 0, 0.25);
	display: block;
	width: 18px;
	height: 2px;
	border-radius: 1px;
	margin: 2px;
	-webkit-transition: all 0.25s ease-in;
}

.menu_view #menu_expander_link {
	background-image: linear-gradient(to bottom, #f8f8f8, #999);
}

.menu_view #menu_expander_link .icon-bar {
	-webkit-box-shadow: 0 1px 0 rgba(255,255,255, 0.8);
}

.menu ul ul:after, .menu ul ul:before {
  display: none;
}


