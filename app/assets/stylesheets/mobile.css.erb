}

td.inline-when-small:before, td.inline-when-small .before {
  display: block;
  min-width: inherit;
}

td.name .before, td.functions .before, td.badges .before, td.cohort .before, td.handle .before, td.email .before, .calendar .before, td.empty .before, tr.empty .before {
  display: none !important;
}

td.handle {
  position: absolute;
  top: 5px;
  right: 5px;
  display: block;
  width: auto;
  margin: 0 !important;
  padding: 0 !important;
  padding-right: 0 !important;
}

td.handle:last-child {
  padding-right: 0 !important;
}

td.handle a {
  display: inline-block;
  width: 2em;
  height: 2em;
  border: 1px solid rgba(0,0,0,0.25);
  border-radius: 50%;
}

td.handle a::after {
  content: '';
  display: inline-block;
  margin-left: 0.6em;
  margin-top: 0.6em;
  width: 0.5em;
  height: 0.5em;
  border-top: 2px solid rgba(0,0,0,0.25);
  border-right: 2px solid rgba(0,0,0,0.25);
  -moz-transform: rotate(135deg);
  -webkit-transform: rotate(135deg);
  transform: rotate(135deg);
}

table td.functions {
  position: absolute;
  top: 3em;
  right: 5px;
  text-align: right;
  display: block;
  box-shadow: 0px 0px 4px rgba(0,0,0,0.3);
  width: auto;
  z-index: 10;
  border-radius: 4px;
  padding-right: 10px;
  visibility: hidden;
  background: white;
  margin-top: 3px;
}

table td.functions.visible {
  visibility: visible;
}

table td.functions a {
  display: block !important;
  width: auto;
  text-align: center;
  margin: 0.25em;
  background: none !important;
  border: none !important;
  box-shadow: none !important;
  border-radius: 0 !important;
  border-bottom: 1px dotted rgba(0,0,0,0.25) !important;
}

td.functions:after, td.functions:before {
	bottom: 100%;
	right: 7px;
	border: solid transparent;
	content: " ";
	height: 0;
	width: 0;
	position: absolute;
	pointer-events: none;  
}

td.functions:after {
	border-bottom-color: #ffffff;  
	border-width: 7px;
	margin-left: -7px;
}

td.functions:before {
  border-bottom-color: rgba(0,0,0,0.1);
	border-width: 8px;
	margin-left: -8px;
}


