.tablesorter-dreamsis .tablesorter-header div {
  margin: 0;
}

.tablesorter-dreamsis .tablesorter-header div:after {
  content: " ";
  width: 20px;
  height: 10px;
  display: inline-block;
  margin-left: 0.5em;
  background-image: url(data:image/gif;base64,R0lGODlhFQAJAIAAACMtMP///yH5BAEAAAEALAAAAAAVAAkAAAIXjI+AywnaYnhUMoqt3gZXPmVg94yJVQAAOw==);
  background-position: center left;
  background-repeat: no-repeat;
  opacity: 0;
}

.tablesorter-dreamsis .tablesorter-header:hover div:after {
  opacity: 1;
}

.tablesorter-dreamsis thead .headerSortUp div:after,
.tablesorter-dreamsis thead .tablesorter-headerSortUp div:after,
.tablesorter-dreamsis thead .tablesorter-headerAsc div:after {
  background-image: url(data:image/gif;base64,R0lGODlhFQAEAIAAACMtMP///yH5BAEAAAEALAAAAAAVAAQAAAINjI8Bya2wnINUMopZAQA7);
  opacity: 1;
}
.tablesorter-dreamsis thead .headerSortDown div:after,
.tablesorter-dreamsis thead .tablesorter-headerSortDown div:after,
.tablesorter-dreamsis thead .tablesorter-headerDesc div:after {
  background-image: url(data:image/gif;base64,R0lGODlhFQAEAIAAACMtMP///yH5BAEAAAEALAAAAAAVAAQAAAINjB+gC+jP2ptn0WskLQA7);
  opacity: 1;
}
.tablesorter-dreamsis thead .sorter-false, .tablesorter-dreamsis thead .sorter-false div:after {
  background-image: none;
  cursor: default;
}

/* table processing indicator */
.tablesorter-dreamsis .tablesorter-processing {
  background-position: center center !important;
  background-repeat: no-repeat !important;
  /* background-image: url(/assets/jquery-tablesorter/loading.gif) !important; */
  background-image: url('data:image/gif;base64,') !important;
}

/* caption */
caption {
  background: #fff;
}

/* filter widget */
.tablesorter-dreamsis .tablesorter-filter-row {
  background: #eee;
}
.tablesorter-dreamsis .tablesorter-filter-row td {
  background: #eee;
  border-bottom: #ccc 1px solid;
  line-height: normal;
  text-align: center; /* center the input */
  -webkit-transition: line-height 0.1s ease;
  -moz-transition: line-height 0.1s ease;
  -o-transition: line-height 0.1s ease;
  transition: line-height 0.1s ease;
}
/* optional disabled input styling */
.tablesorter-dreamsis .tablesorter-filter-row .disabled {
  opacity: 0.5;
  filter: alpha(opacity=50);
  cursor: not-allowed;
}
/* hidden filter row */
.tablesorter-dreamsis .tablesorter-filter-row.hideme td {
  /*** *********************************************** ***/
  /*** change this padding to modify the thickness     ***/
  /*** of the closed filter row (height = padding x 2) ***/
  padding: 2px;
  /*** *********************************************** ***/
  margin: 0;
  line-height: 0;
  cursor: pointer;
}
.tablesorter-dreamsis .tablesorter-filter-row.hideme * {
  height: 1px;
  min-height: 0;
  border: 0;
  padding: 0;
  margin: 0;
  /* don't use visibility: hidden because it disables tabbing */
  opacity: 0;
  filter: alpha(opacity=0);
}
/* filters */
.tablesorter-dreamsis input.tablesorter-filter,
.tablesorter-dreamsis select.tablesorter-filter {
  width: 95%;
  height: auto;
  margin: 4px;
  padding: 4px;
  background-color: #fff;
  border: 1px solid #bbb;
  color: #333;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  -webkit-transition: height 0.1s ease;
  -moz-transition: height 0.1s ease;
  -o-transition: height 0.1s ease;
  transition: height 0.1s ease;
}
/* rows hidden by filtering (needed for child rows) */
.tablesorter .filtered {
  display: none;
}

/* ajax error row */
.tablesorter .tablesorter-errorRow td {
  text-align: center;
  cursor: pointer;
  background-color: #e6bf99;
}
