	<h2>Paperwork</h2>
	
	<table>
		<tr class="rowset-header">
			<th>Item</th>
			<th>Status</th>
			<th>Action</th>
		</tr>
		
		<tr>
			<td>Workbook</td>
			<td><% if @participant.received_binder? %>
					<span class="green">Given on <%= @participant.binder_date.to_s(:short) rescue "unknown" %></span>
				<% else %>
					<span class="red">Not given</span>
				<% end -%>
				</td>
			<td><% if @participant.received_binder? %>
					<span><%= link_to "Give another workbook", 
										participant_path(@participant, 
														:participant => { :binder_date => Time.now,
																		  :received_binder => true }),
										:method => :put %></span>
				<% else %>
				<span><%= link_to "Give workbook", 
									participant_path(@participant, 
													:participant => { :binder_date => Time.now,
																	  :received_binder => true }),
									:method => :put %></span>
				<% end -%>
				</td>
		</tr>
		
		<tr>
			<td>FAFSA</td>
			<td colspan=2>
				<table>
					<%- for year in (@participant.grad_year || @participant.created_at.year)..Time.now.year -%>
						<%- fafsa = @participant.fafsa(year) -%>
						<tr>
							<td><%= year %></td>
							<%- for attribute in %w[Submitted_FAFSA Submitted_WASFA Not_Applicable] -%>
							<td>
								<%- remote_form_for @participant do |f| %>
									<%= hidden_field_tag "participant[fafsa_#{year}_#{attribute.downcase}]", false, :id => nil %>
									<%= check_box_tag "participant[fafsa_#{year}_#{attribute.downcase}]", 
														true, 
														@participant.fafsa(year).try("#{attribute.downcase}?"), 
														:onChange => "this.form.onsubmit()",
														:id => "fafsa_#{year}_#{attribute.downcase}" %>
									<%= label_tag "fafsa_#{year}_#{attribute.downcase}", attribute.gsub("_", " ") %>
								<% end %>
							</td>
							<% end %>
						</tr>
					<% end %>
				</table>
			</td>
		</tr>		
		
