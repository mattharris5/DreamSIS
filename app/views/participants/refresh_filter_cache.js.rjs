page.if("$('filter_results_container')") do
  page.replace "filter_results_container", :partial => "participants/filter_results"
end

page.if("$('filter_results_tab_link')") do
  page << "$('filter_results_tab_link').down('.count').update('#{@participant.filter_results_count}')"
  page << "$('filter_results_tab_link').down('.count').addClassName('calculating')"
  page << "setTimeout(\"$('filter_results_tab_link').down('.count').removeClassName('calculating')\", 500)"
  page << "$('filter_results_tab_link').down('.count-bar').addClassName('count-#{@participant.filter_results_count}')"
end