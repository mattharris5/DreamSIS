<%- html_class ||= h(@report) -%>
<table class="participants multirow active-report <%= html_class %>" id="participants_table">
	<thead>
		<tr>
			<th><input type="checkbox" class="select-all"></th>
			<%= render :partial => "participants/reports/#{h(@report || "basic").pluralize}_header" %>
		</tr>
	</thead>
	
	<%= render :partial => 'participant', :collection => @participants, :locals => { :report => h(@report || "basic") } %>
	
	<tfoot id="empty_placeholder" style="display:none">
		<tr class="empty">
			<td colspan="20">No <%= Customer.participants_label %> match your selection.</td>
		</tr>
	</tfoot>
</table>
