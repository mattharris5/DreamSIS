<%= subheader do %>
  <h3 class="pre-title"><%= link_to h(@participant.fullname), @participant %></h3>
  <h1>Parents/Guardians &amp; Contacts</h1>
<% end %>

<table id="parents">
	<thead>
		<tr>
			<th>Name</th>
			<th>Relationship</th>
			<th>Lives With</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Languages</th>
			<th class="functions">Functions</th>
		</tr>
	</thead>

	<tbody>
		<%= render @participant.parents %>
				
		<%- if @participant.parents.empty? -%>
		<tr class="empty">
			<td colspan="10">No contacts yet.</td>
		</tr>
		<% end %>
	</tbody>

</table>

<%= link_to 'Add parent/guardian', new_participant_parent_path, class: 'btn btn-default' %>
