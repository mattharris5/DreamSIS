<h1>Locations</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Coordinates</th>
	<th>County</th>
    <th>Phone</th>
	<th colspan=3></th>
  </tr>

<% for location in @locations %>
  <tr>
    <td><%=h location.name %></td>
    <td><%=h location.address %></td>
    <td><%=h location.to_coordinates.join(", ") if location.geocoded? %></td>
	<td><%=h location.county %></td>
    <td><%=h number_to_phone location.phone %></td>
    <td><%= link_to 'Show', location %></td>
    <td><%= link_to 'Edit', edit_location_path(location) %></td>
    <td><%= link_to 'Destroy', location, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New location', new_location_path, :class => "add button" %>
