<h1>RSVP for <%=h @event_group.name %></h1>
<p><%= sanitize textilize(@event_group.description), :tags => %w(table tr td h2 p a), :attributes => %w(id class style href) %></p>

<table class="highlightless rsvp">
	<%= render :partial => 'event', :collection => @event_group.events.future %>
	
	<%- if @event_group.events.future.empty? -%>
	<tr class="empty">
		<td colspan=10>There aren't any events available for RSVP right now.</td>
	</tr>
	<% end -%>
	
</table>

<%= render :partial => 'sidebar' %>
