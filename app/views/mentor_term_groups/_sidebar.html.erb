<%= operations(wrap: false) do %>

	<div class="btn-group" role="group" aria-label="Operations Links">
		<%= link_to "Add new", new_mentor_term_group_path(term_id: @term.try(&:to_param)), class: 'btn btn-default', glyph: 'plus' %>
	
		<% if @term && !@term.course_ids.blank? %>
			<div class="btn-group" role="group">
				<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
					More
					<span class="caret"></span>
				</button>
				<ul class="dropdown-menu">
					<%= link_to "Match Time Schedule",
					 				create_from_linked_sections_mentor_term_groups_path(term_id: @term.to_param),
									method: :put,
					 				class: "btn btn-default",
									glyph: 'calendar-check-o',
									confirm: "Are you sure? This will create new groups for any linked section that doesn't already have a group.",
					 				disable_with: "Syncing..." %>
					
					<%= link_to "Sync course enrollees",
					 				sync_mentor_term_groups_path(term_id: @term.to_param),
									method: :put,
					 				class: "btn btn-default",
									glyph: 'fork',
									confirm: "Are you sure? This will sync the enrollees from the student database in each section.",
					 				disable_with: "Syncing..." %>
				</ul>
			</div>
		<% end -%>
				
	</div>

<%- end -%>
