<h1>Edit Note</h1>

<%= semantic_form_for @note, :html => { :multipart => true } do |f| %>

	<%= f.semantic_errors %>

	<%= render :partial => "fields", :locals => { :f => f } %>
	
	<%= f.submit "Save", :disable_with => 'Saving...' %>
	<%= separator "or" %>
	<%= link_to 'Cancel', @note %>

<% end %>
