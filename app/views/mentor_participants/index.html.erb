<table class="mentors">
	<thead>
		<tr>
			<th>Name</th>
			<th>E-mail</th>
			<th>Assigned Dates</th>
			<th class="functions">Functions</th>
		</tr>
	</thead>
	
	<tbody>
		<%= render @participant.mentor_participants %>
				
		<%- if @participant.mentors.empty? -%>
		<tr class="empty">
			<td colspan="10">No <%= Customer.mentors_label %> have been assigned to this <%= Customer.mentee_label %> yet.</td>
		</tr>
		<% end %>
	</tbody>

</table>
