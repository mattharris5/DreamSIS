<h1>Edit Stat Filter</h1>

<%= semantic_form_for :object_filter, @object_filter, :url => object_filter_path(@object_filter), :html => { :method => :put } do |f| %>

	<%= f.semantic_errors %>

	<%= render :partial => "fields", :locals => { :f => f } %>
	
	<%= f.submit "Update", :disable_with => 'Updating...' %> - or -
	<%= link_to 'Cancel', object_filter_path(@object_filter) %>

<% end %>
