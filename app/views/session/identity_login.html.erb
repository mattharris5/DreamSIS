<h1>Login</h1>

<p>Please enter your login information and we'll get you on your way.</p>

<%= form_tag "/auth/identity/callback" do %>
	<div class="field">
		<%= label_tag :auth_key, "E-mail" %><br>
		<%= text_field_tag :auth_key %>
	</div>
	<div class="field">
		<%= label_tag :password %><br>
		<%= password_field_tag :password %>
	</div>
	<div class="actions"><%= submit_tag "Login" %></div>
<% end %>