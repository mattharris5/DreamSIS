<%= f.inputs(:name => "Name and Personal Information") do -%>
	<%= f.inputs :name => "Name", :class => "inline compress-bottom" do %>
		<%= f.inputs :lastname, :firstname, :middlename, :suffix %>
	<%- end -%>
	<%= f.input :sex, :collection => {"Male" => "M", "Female" => "F", "No Response" => "NR"}, :include_blank => true, :label => "Sex/Gender" %>
	<%= f.input :birthdate, :start_year => 1985, :end_year => Time.now.year-10 %> 
<% end -%>