<h1>Terms</h1>

<table>
	<tr>
		<th>Name</th>
		<th>Start Date</th>
		<th>Primary Course(s)</th>
		<th>Allow Signups?</th>
		<th>Functions</th>
	</tr>

<% for term in @terms %>
<tr class="<%= "current" if term.current_term? %>">
	<td class="name"><%= link_to term.title, term %></td>
	<td><%= term.start_date.to_s(:db) %></td>
	<td><%= term.course_ids.collect{|c| "<li>#{h(c)}</li>"} if term.course_ids %></td>
	<td><%= "Y" if term.allow_signups? %>
	<td class="functions">
		<%= link_to 'Edit', edit_term_path(term) %>
		<%= link_to 'Delete', term, :confirm => 'Are you sure?', :method => :delete %>
	</td>
</tr>
<% end %>
</table>

<%= render :partial => "sidebar" %>