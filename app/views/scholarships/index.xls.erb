<thead>
	<tr>
		<th>id</th>
	    <th>title</th>
	    <th>organization_name</th>
	    <th>default_amount</th>
	    <th>default_renewable_years</th>
	    <th>default_full_ride</th>
	    <th>default_gap_funding</th>
	    <th>default_living_stipend</th>
	    <th>default_renewable</th>
		<th>applications</th>
		<th>applications_awarded</th>
		<th>applications_awarded_amount</th>
		<th>created_at</th>
		<th>updated_at</th>
	</tr>
</thead>

<tbody>
<% for scholarship in @scholarships %>
	<tr>
		<td><%=h scholarship.id %></td>
	    <td><%=h scholarship.title %></td>
	    <td><%=h scholarship.organization_name %></td>
	    <td class="currency"><%=h scholarship.default_amount %></td>
	    <td><%=h scholarship.default_renewable_years %></td>
	    <td><%=h scholarship.default_full_ride %></td>
	    <td><%=h scholarship.default_gap_funding %></td>
	    <td><%=h scholarship.default_living_stipend %></td>
	    <td><%=h scholarship.default_renewable %></td>
		<td><%=h scholarship.scholarship_applications.size %></td>
		<td><%=h scholarship.scholarship_applications.awarded.size %></td>
		<td class="currency"><%=h scholarship.scholarship_applications.awarded.collect(&:amount).sum %></td>
		<td><%=h scholarship.created_at %></td>
		<td><%=h scholarship.updated_at %></td>
	</tr>
<% end %>
</tbody>
