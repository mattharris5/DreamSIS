<h1>Editing <%=h @mentor.fullname %></h1>

<%= semantic_form_for @mentor, :html => { :multipart => true } do |f| %>
	<%= f.semantic_errors %>
	
	<%= render :partial => 'fields', :locals => { :f => f } %>
	
	<%= f.actions do -%>
		<%= f.action :submit %>
		<%= link_to "Cancel", @mentor, :class => 'cancel button' %>
	<% end -%>

<% end %>