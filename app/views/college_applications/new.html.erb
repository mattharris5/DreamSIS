<h3 class="pre-title"><%=h @participant.fullname %></h3>
<h1>Add college</h1>

<%= semantic_form_for([@participant, @college_application]) do |f| %>
  	<%= f.semantic_errors %>
	<%= render :partial => "fields", :locals => { :f => f } %>

	<%= f.actions do -%>
	 	<%= f.submit "Create" %>
		<%= separator %>
		<%= link_to 'Back', @participant, :class => 'cancel button' %>
	<% end -%>

<% end %>
